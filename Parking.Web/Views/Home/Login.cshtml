@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        <form class="form-horizontal" style="width:400px; margin:0 auto;">
            <div class="form-group">
                <label for="txtUsuario" class="col-sm-4 control-label">Email</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="txtUsuario" placeholder="Usuario">
                </div>
            </div>
            <div class="form-group">
                <label for="txtPassword" class="col-sm-4 control-label">Contraseña</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" id="txtPassword" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="btnIniciar" type="submit" class="btn btn-primary">Iniciar Sessión</button>
                </div>
            </div>
        </form>
    </div>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET by Adrian Nuñez</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        $("#btnIniciar").click(function () {
            if ($("#txtUsuario").val().trim() == "") {
                alert("Debe ingresar un usuario");
                return false;
            }
            if ($("#txtPassword").val().trim() == "") {
                alert("Debe ingresar una contraseña");
                return false;
            }
            ValidarUsuario();
        });

        function ValidarUsuario() {
            let object = {
                Usuario: $("#txtUsuario").val().trim(),
                Contrasena: $("#txtPassword").val().trim()
            }
            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                url: "/Home/ValidarUsuario",
                data: JSON.stringify(object),
                dataType: "json",
                async: true,
                cache: false,
                success: function (retval) {
                    debugger;
                    if (retval) {
                        window.location.href = "/Home/Index";
                    } else {
                        alert("No tienes permisos para acceder al sistema");
                        return false;
                    }
                },
                error: function (xhr, textStatus, exceptionThrown) {
                    alert("ocurrrio un error");
                    return false;
                }
            });
        }
    </script>
</body>
</html>
